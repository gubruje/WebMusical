{% block user_block %}
    {% if app.user %}
        <li class="user-header bg-light-blue">
            <p>{{ app.user }}</p>
        </li>
        <li class="user-footer">
            <div class="pull-right">
                <a href="{{ url('sonata_user_admin_security_logout') }}" class="btn btn-default btn-flat"><i class="fa fa-sign-out fa-fw"></i> {{ 'user_block_logout'|trans({}, 'SonataUserBundle') }}</a>
            </div>
        </li>
        {% if is_granted('ROLE_PREVIOUS_ADMIN') and sonata_user.impersonating %}
            <a href="{{ url(sonata_user.impersonating.route, sonata_user.impersonating.parameters| merge({'_switch_user': '_exit'})) }}">(exit)</a>
        {% endif %}

    {% endif %}
{% endblock %}
