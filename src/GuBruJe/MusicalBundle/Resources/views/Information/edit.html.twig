{% extends 'GuBruJeMusicalBundle::layout.html.twig' %}

{% block musical_body -%}
    <h1 class="page-header">Information <small>modification</small></h1>

    <div class="row row-fluid">
        <div class="span8 col-lg-8">
            {{ form_start(edit_form) }}
            {{ form_row(edit_form.typeInformation) }}
            {{ form_row(edit_form.titre) }}
            {{ form_row(edit_form.contenu) }}
            <div class="control-group">
                <div class="controls">
                    <button type="submit" id="_submit" name="_submit" class="btn btn-primary">Modifer</button>
                    <a class="btn btn-default" href="{{ path('homepage') }}">
                        Annuler
                    </a>
                </div>
            </div>

            {{ form_end(edit_form) }}
        </div>
        <div class="span4 col-lg-4">

            <div class="panel panel-default">
                <div class="panel-heading">Information</div>
                <div class="panel-body">
                    Toute modification de publication est resoumise aux contrôle et à la validation d'un administrateur.
                </div>
            </div>
            {{ form(delete_form) }}
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ tinymce_init() }}
{% endblock %}