{% extends 'GuBruJeMusicalBundle::layout.html.twig' %}

{% block titre %}
    <h1 class="page-header">Annonces</h1>
{% endblock %}
{% block musical_body -%}
    {% for annonce in annonces %}
        <div class="blog-post">
            <h2><a href="{{ path('annonce_show', { 'id': annonce.id }) }}">{{ annonce.titre }}</a></h2>
            <em>
                Le
                <time datetime="{{ annonce.date|date('c') }}"
                      itemprop="datePublished">{{ annonce.date|date('d/m/Y Ã   H\\hi') }}</time>
                par
                <span itemprop="author">{{ annonce.auteur }}</span>
            </em>

            <p>Rubrique : {{ annonce.rubrique }}</p>

            <div class="well">
                <p>{{ annonce.contenu }}</p>
            </div>

        </div>
    {% else %}
        <p>Aucune annonce</p>
    {% endfor %}
{% endblock %}
